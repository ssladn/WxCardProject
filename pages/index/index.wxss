/**index.wxss**/
@import "/pages/templates/cardItems/cardItems.wxss";
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.headerBg {
  display: flex;
  background-color: #3d3bee;
  width: 100%;
  height: 300rpx;
}

.headerBg-titleBg {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 127rpx;
  align-items: center;
  opacity: 0.8;
}

.headerBg-title {
  display: flex;
  flex: 1;
  color: #fff;
  font-size: 48rpx;
  /* margin-top: 30rpx; */
  margin-left: 30rpx;
}

.headerBg-haibao-btn {
  display: flex;
  color: #3d3bee;
  opacity: 0.8;
  /* margin-top: 45rpx; */
  margin-right: 30rpx;
  background: #fff;
  height: 44rpx;
  width: 218rpx;
  border-radius: 44rpx;
  font-size: 24rpx;
  align-items: center;
  justify-content: center;
}

.headerBg-haibao-btn-icon {
  display: flex;
  width: 24rpx;
  height: 26rpx;
  margin-right: 20rpx;
}

.cardBg {
  display: flex;
  flex-direction: column;
  width: 100%;
  background: white;
  /* height: 710rpx; */
  margin-top: -20rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  align-items: center;
}

.card-mainBg {
  display: flex;
  position: relative;
  flex-direction: column;
  justify-content: center;
  height: 710rpx;
}

.card-mainBg-img {
  display: flex;
  width: 690rpx;
  height: 430rpx;
}

.vi-card-shadow-view {
  display: flex;
  position: absolute;
  width: 100%;
  height: 280rpx;
  margin-top: -130rpx;
  z-index: 0;
}

.card-mainBg-img-shadow {
  display: flex;
  width: 100%;
  height: 280rpx;
}

.card-mainBg-mainView {
  display: flex;
  width: 690rpx;
  height: 430rpx;
  color: white;
  margin-top: -450rpx;
  z-index: 2;
}

.card-main-view {
  display: flex;
  position: absolute;
  flex-direction: column;
  width: 690rpx;
  height: 430rpx;
  color: white;
  /* margin-top: -150rpx; */
}

.car-main-view-titleView {
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  margin-top: 30rpx;
}

.car-main-view-titleView-name {
  font-size: 54rpx;
  margin-left: 30rpx;
}

.headerBg-card-bianji-btn {
  display: flex;
  color: #3d3bee;
  opacity: 0.8;
  /* margin-top: 45rpx; */
  margin-left: 30rpx;
  background: #fff;
  height: 44rpx;
  width: 122rpx;
  border-radius: 44rpx;
  font-size: 24rpx;
  align-items: center;
  justify-content: center;
}

.headerBg-card-bianji-btn-icon {
  display: flex;
  width: 24rpx;
  height: 26rpx;
  margin-right: 20rpx;
}

.headerBg-card-header-icon-view {
  display: flex;
  flex: 1;
  justify-content: flex-end;
}

.headerBg-card-header-icon {
  display: flex;
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 50rpx;
  margin-right: 30rpx;
}

.car-main-view-titleView-mark {
  display: flex;
  font-size: 30rpx;
  align-items: baseline;
}

.car-main-view-titleView-mark-title {
  margin-left: 30rpx;
  white-space: nowrap;
}

.car-main-view-titleView-mark-address {
  margin-left: 30rpx;
  margin-right: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.vi-card-line {
  display: flex;
  width: 230rpx;
  height: 2rpx;
  background: #fff;
  opacity: 0.4;
  margin-left: 30rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.car-main-view-detailView {
  margin-left: 30rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.iv-shareCart-btn {
  display: flex;
  width: 690rpx;
  height: 94rpx;
  border-radius: 47rpx;
  background: #3d3bee;
  color: #fff;
  justify-content: center;
  margin-top: 60rpx;
}

