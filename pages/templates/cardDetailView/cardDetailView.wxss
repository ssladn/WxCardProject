.card-mainBg-img {
  display: flex;
  width: 690rpx;
  height: 430rpx;
}

.vi-card-shadow-view {
  display: flex;
  position: absolute;
  width: 100%;
  height: 280rpx;
  margin-top: 100rpx;
  z-index: 0;
}

.card-mainBg-img-shadow {
  display: flex;
  width: 100%;
  height: 280rpx;
}

.card-mainBg-mainView {
  display: flex;
  width: 690rpx;
  height: 430rpx;
  color: white;
  /* margin-top: -450rpx; */
  z-index: 2;
}

.card-main-view {
  display: flex;
  position: absolute;
  flex-direction: column;
  width: 690rpx;
  height: 430rpx;
  color: white;
  /* margin-top: -150rpx; */
}

.car-main-view-titleView {
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  margin-top: 30rpx;
}

.car-main-view-titleView-name {
  font-size: 54rpx;
  margin-left: 30rpx;
}

.headerBg-card-bianji-btn {
  display: flex;
  color: #3d3bee;
  opacity: 0.8;
  /* margin-top: 45rpx; */
  margin-left: 30rpx;
  background: #fff;
  height: 44rpx;
  width: 122rpx;
  border-radius: 44rpx;
  font-size: 24rpx;
  align-items: center;
  justify-content: center;
}

.headerBg-card-bianji-btn-icon {
  display: flex;
  width: 24rpx;
  height: 26rpx;
  margin-right: 20rpx;
}

.headerBg-card-header-icon-view {
  display: flex;
  flex: 1;
  justify-content: flex-end;
}

.headerBg-card-header-icon {
  display: flex;
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 50rpx;
  margin-right: 30rpx;
}

.car-main-view-titleView-mark {
  display: flex;
  font-size: 30rpx;
  align-items: baseline;
}

.car-main-view-titleView-mark-title {
  margin-left: 30rpx;
  white-space: nowrap;
}

.car-main-view-titleView-mark-address {
  margin-left: 30rpx;
  margin-right: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.vi-card-line {
  display: flex;
  width: 230rpx;
  height: 2rpx;
  background: #fff;
  opacity: 0.4;
  margin-left: 30rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.car-main-view-detailView {
  margin-left: 30rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}